#

UBXSec: {
module_type:                  "UBXSec"
PFParticleProducer:           "pandoraNu"
HitProducer:                  "pandoraCosmicHitRemoval"
GeantModule:                  "largeant"
SpacePointProducer:           "pandoraNu"
